@model AcademiaFit.Models.ViewModels.PlanoUsuarioViewModel
@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Novo Usuário</h2>

<form asp-action="Salvar" method="post">
    <div class="form-group">
        <label asp-for="Cliente.Nome" class="col-md-4 "></label>
        <div class="col-md-5">
            <input asp-for="Cliente.Nome" class="form-control" />
            <span asp-validation-for="Cliente.Nome" class="alert-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cliente.Email" class="col-md-4 "></label>
            <div class="col-md-5">
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="alert-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cliente.DataAniversario" class="col-md-4 "></label>
            <div class="col-md-5">
                <input asp-for="Cliente.DataAniversario" class="form-control" />
                <span asp-validation-for="Cliente.DataAniversario" class="alert-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cliente.DataInscricao" class="col-md-4 "></label>
            <div class="col-md-5">
                <input asp-for="Cliente.DataInscricao" class="form-control" />
                <span asp-validation-for="Cliente.DataInscricao" class="alert-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>
                @Html.DropDownListFor(m => m.Cliente.PlanoId, new SelectList(Model.Planos, "Id", "Nome"), "Selecione um plano")
            </label>
        </div>
        <button type="submit" class="btn btn-success">Novo Usuario</button>

    </div>
</form>








